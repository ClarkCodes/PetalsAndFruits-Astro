---
import { ClientRouter } from 'astro:transitions';
const { id, img_src, alt, name, description } = Astro.props 
---
<div class="producto" >
    <a href={`/products/${id}`} target="_self">
        <img src={img_src} alt= {alt} transition:name={ `img-${id}` } transition:animate="slide">
        <h3>{name}</h3>
    </a>
    <p>{description}</p>
</div>
<style>
    .producto {
        height: fit-content;
        width: 300px;
        padding: 1rem;
        border: 3px solid transparent;
        border-radius: 10px;
        box-shadow: 0 0 7px rgba( 0, 0, 0, .3 );
        text-align: center;
        transition: border .15s ease-out;
        
        &:hover {
            transition: border .2s ease;
            border: 3px solid lightgreen;
        }
    
        img {
            cursor: pointer;
            width: 100%;
            height: auto;
            margin-bottom: 1rem;
            border: 2px solid transparent;
            border-radius: 8px;
            transition: border .15s ease-out;
            
            &:hover {
                transition: border .2s ease;
                border: 2px solid lightgreen;
            }
        }

        a {
            text-decoration: none;
        }

        h3 {
            margin-bottom: .5rem;
            cursor: pointer;
            color: var( --foreground-black-color-81 );
            transition: color .1s ease;

            &:hover{
                color: var( --primary-accent-color-darkest );
                transition: color .15s ease;
            }
        }
        
        p {
            font-size: 0.9rem;
            color: var( --foreground-gray-5-color );
            text-align: center;
        }
    }
</style>